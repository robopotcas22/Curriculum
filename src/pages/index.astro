</Layout>

<style>
	article{
		margin:auto;
		width:400px;
		color:white;
	}
	img{
		width: 65px;
		height:65px;
		border-radius: 999px;
		display:inline;
		margin-right: 20px;
	}
	header{
		display:flex;
		color:white;
		justify-content: space-between;
		margin-top:20px;
		border-bottom: 1px solid #777;
		width:400px;
	}
	h2{
		padding:0px 10px 10px 0px;
		border-bottom:1px solid #777;
	}
	strong{
		color:#09f;
	}
	.card-focus-text{
		color: #09f;
	}
	details{
		transition-duration: 0.5s;
		margin:2.5px 0px 2.5px 0px ;
		cursor:pointer;

		&:hover{
			background:#9992;
		}
	}
	details[open]{
		background:#9992;
		border-radius:5px;
		padding:5px;

	}
    h5{
			border:0;
			margin-top:10px;
			display:inline;
		}
	
	.project_list{
		display:grid;
		grid-template-columns: 1fr 1fr;
		grid-gap:5px;
	}
	.projects_done{
			display:inline-block;
			height:100px;
			background:#333;
			border-radius:5px;
			cursor:pointer;
			&:hover{
				background:#888;
			}
	}

</style>
